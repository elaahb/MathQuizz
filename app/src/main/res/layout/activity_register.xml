<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/math_doodle_background"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@drawable/dialog_background"
            android:padding="20dp">

            <!-- Logo -->
            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/mathapp"
                android:gravity="center"
                android:text="1"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp"/>

            <!-- Titre -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Créer un Compte"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#6B46C1"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rejoignez le jeu et améliorez vos compétences en mathématiques"
                android:textSize="15sp"
                android:textColor="#9575CD"
                android:gravity="center"
                android:layout_marginBottom="24dp"/>

            <!-- Champs Nom -->
            <EditText
                android:id="@+id/nom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nom"
                android:padding="12dp"
                android:background="@drawable/edittext_background"
                android:layout_marginBottom="12dp"/>

            <!-- Champ Email -->
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:background="@drawable/edittext_background"
                android:layout_marginBottom="12dp"/>

            <!-- Champ Mot de passe -->
            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mot de passe"
                android:inputType="textPassword"
                android:padding="12dp"
                android:background="@drawable/edittext_background"
                android:layout_marginBottom="16dp"/>

            <!-- Bouton S'inscrire -->
            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="S'inscrire"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:backgroundTint="#6B46C1"
                android:paddingVertical="14dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"/>

            <!-- Lien vers login -->
            <TextView
                android:id="@+id/goToLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vous avez déjà un compte ? Se connecter"
                android:textColor="#9575CD"
                android:textSize="14sp"
                android:layout_marginBottom="24dp"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>