<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/math_doodle_background"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@drawable/dialog_background"
            android:padding="20dp">

            <!-- Logo -->
            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/mathapp"
                android:gravity="center"
                android:text="1"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp"/>

            <!-- Titre -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connexion"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#6B46C1"
                android:layout_marginBottom="12dp"/>

            <!-- Sous texte -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connectez-vous pour jouer"
                android:textSize="15sp"
                android:textColor="#9575CD"
                android:gravity="center"
                android:layout_marginBottom="24dp"/>

            <EditText
                android:id="@+id/EmailLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:background="@drawable/edittext_background"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/PasswordLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mot de passe"
                android:inputType="textPassword"
                android:padding="12dp"
                android:background="@drawable/edittext_background"
                android:layout_marginBottom="20dp"/>

            <!-- Bouton Connexion -->
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Se connecter"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:paddingVertical="14dp"
                android:backgroundTint="#6B46C1"
                android:layout_marginBottom="16dp"/>

            <!-- Aller vers Register -->
            <TextView
                android:id="@+id/tvGoRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pas de compte ? CrÃ©er un compte"
                android:textColor="#9575CD"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="24dp"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>