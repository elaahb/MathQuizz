<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="28dp"
    android:background="@drawable/pastel_gradient_background">

    <TextView
        android:id="@+id/levelTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Niveau Facile"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#6B46C1"
        android:layout_marginBottom="28dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnViewInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voir les infos du niveau"
        android:textSize="17sp"
        android:padding="18dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#B3D9FF"
        android:textColor="#1976D2"
        style="@style/Widget.Material3.Button"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@id/levelTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnResetScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RÃ©initialiser le score"
        android:textSize="17sp"
        android:padding="18dp"
        android:backgroundTint="#FFCCBC"
        android:textColor="#E64A19"
        style="@style/Widget.Material3.Button"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnViewInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

